{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["watch-tmlanguage", "watch-spec", "watch-source"],
      "dependsOrder": "parallel",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "watch-source",
      "type": "shell",
      "command": "node ${workspaceFolder}/eng/scripts/watch.js",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "watch-tmlanguage",
      "type": "shell",
      "command": "npm run watch-tmlanguage",
      "problemMatcher": {
        "base": "$msCompile",
        "background": {
          "beginsPattern": "^@@BEGIN.*$",
          "endsPattern": "^@@END.*$"
        }
      },
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/packages/adl-vscode"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "watch-spec",
      "type": "shell",
      "command": "npm run watch",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/packages/adl-language"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "test",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/packages/adl"
      },
      "command": "npm test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    }
  ]
}
