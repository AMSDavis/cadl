{
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/node_modules/**": true,
    "**/common/temp/**": true,
    "**/dist/**": true,
    "**/obj/**": true,
    "**/bin/**": true,
    "**/.git": true,
    "**/.DS_Store": true
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[jsonc]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.detectIndentation": false
  },
  "[yaml]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "files.associations": {
    "rush.json": "jsonc",
    "common-versions.json": "jsonc",
    "command-line.json": "jsonc",
    "version-policies.json": "jsonc"
  },
  "typescript.tsdk": "./packages/adl/node_modules/typescript/lib",
  "git.ignoreLimitWarning": true,
  "mochaExplorer.files": "./packages/*/dist/test/**/*.js",
  "mochaExplorer.ignore": "./packages/*/dist/test/manual/**/*.js",
  "mochaExplorer.mochaPath": "./packages/adl/node_modules/mocha",
  "mochaExplorer.monkeyPatch": true,
  "mochaExplorer.timeout": 500000,
  "mochaExplorer.require": "source-map-support/register",
  "mochaExplorer.fullTrace": true,
  "mochaExplorer.env": {
    "ADL_VERBOSE_TEST_OUTPUT": "true",
    "NODE_OPTIONS": "--stack-trace-limit=50"
  },
  "testExplorer.errorDecoration": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
