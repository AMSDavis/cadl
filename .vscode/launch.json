{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Default Port",
      "port": 9229,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "name": "Attach to Language Server",
      "type": "node",
      "request": "attach",
      "port": 4242,
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"],
      "timeout": 60000
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Compile Scratch",
      "program": "${workspaceRoot}/packages/adl/dist/compiler/cli.js",
      "args": ["compile", "samples/scratch", "--output-path=dist/scratch-adl-output"],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceRoot}/packages/adl"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Compile Scratch (nostdlib)",
      "program": "${workspaceRoot}/packages/adl/dist/compiler/cli.js",
      "args": ["compile", "samples/scratch", "--output-path=dist/scratch-adl-output", "--nostdlib"],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceRoot}/packages/adl"
    },
    {
      "name": "Regenerate TextMate Grammar",
      "type": "node",
      "protocol": "inspector",
      "program": "${workspaceRoot}/packages/adl-vscode/dist/adl.tmLanguage.js",
      "request": "launch",
      "cwd": "${workspaceRoot}/packages/adl-vscode"
    },
    {
      "type": "node",
      "protocol": "inspector",
      "request": "launch",
      "name": "Run Compiler Tests",
      "program": "${workspaceRoot}/packages/adl/node_modules/mocha/bin/_mocha",
      "args": ["dist/test", "--timeout=2000000"],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceRoot}/adl/plugins/azure"
    },
    {
      "name": "VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": ["--extensionDevelopmentPath=${workspaceRoot}/packages/adl-vscode"],
      "preLaunchTask": "tmlanguage-gen",
      "env": {
        "DEBUG_ADL_LANGUAGE_SERVER": "--nolazy --inspect-brk=4242"
      }
    }
  ],
  "compounds": [
    {
      "name": "VS Code Extension (Client/Server)",
      "configurations": ["VS Code Extension", "Attach to Language Server"]
    }
  ]
}
