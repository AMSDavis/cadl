{
  "name": "@azure-tools/adl-language",
  "private": true,
  "version": "0.1.0",
  "description": "ADL Language Specification Source Code",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "homepage": "https://github.com/Azure/adl#readme",
  "readme": "https://github.com/Azure/adl/blob/master/readme.md",
  "bugs": {
    "url": "https://github.com/Azure/adl/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/adl.git"
  },
  "scripts": {
    "build": "npm run generate-grammar && npm run generate-spec",
    "watch": "watch \"node scripts/watch-spec-handler.js\" ./src",
    "generate-grammar": "mkdirp temp && grammarkdown --newLine LF src/language.grammar --out temp/grammar.emu.html --format ecmarkup",
    "generate-spec": "ecmarkup src/spec.emu.html ../../docs/spec.html"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/mkdirp": "~1.0.1",
    "@types/node": "14.0.27",
    "ecmarkup": "^7.0.3",
    "grammarkdown": "^3.1.2",
    "mkdirp": "~1.0.4",
    "prettier": "~2.2.1",
    "typescript": "~4.1.5",
    "watch": "^1.0.2"
  }
}
