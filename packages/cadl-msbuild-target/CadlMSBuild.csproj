<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>Cadl.MSBuild</AssemblyName>
    <VersionPrefix>$(CadlMSBuildVersion)</VersionPrefix>
    <WarningLevel>9999</WarningLevel>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>NU5128</NoWarn>
  </PropertyGroup>

  <ItemGroup Label="NuGet package assets">
    <None Pack="true" PackagePath="build\" Include="build\**\*.xml; build\**\*.props; build\**\*.targets;" />
   </ItemGroup>

  <ItemGroup >
    <PackageReference Include="Microsoft.Build.Framework" Version="16.0.461"  PrivateAssets="All" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="16.0.461"  PrivateAssets="All" />
    <PackageReference Include="Microsoft.NETFramework.ReferenceAssemblies" Version="1.0.2" PrivateAssets="All" />
  </ItemGroup>
  
  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <BuildOutputTargetFolder>build\</BuildOutputTargetFolder>
    <Company>Microsoft</Company>
    <Authors>Microsoft</Authors>
    <PackageId>Cadl.MSBuild</PackageId>
    <Version>0.1.0</Version>
  </PropertyGroup>

</Project>
