  "rushVersion": "5.62.1",
  "pnpmVersion": "5.18.10",
  "ensureConsistentVersions": true,
  /**
   * Options that are only used when the PNPM package manager is selected
   */
  "pnpmOptions": {
    "strictPeerDependencies": true
  },
